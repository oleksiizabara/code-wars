<p id="notice"><%= notice %></p>

<p>
  <strong>Login:</strong>
  <%= @user.login %>
</p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<% if session[:status] == 'teacher' && session[:user_id] == @user.id %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', users_path %>
<% end %>
